    "main": "./dist/index.js",
    "scripts": {
        "postinstall": "tsc",
        "build": "tsc",
        "watch": "tsc -w",
        "debug": "nodemon --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/index.js",
        "docker-debug": "docker-compose up",
        "start": "node ./dist/index.js",
        "test": "jest --watch --testTimeout=12000 ShareChatSocialRealTimeRedisRepository.test.ts"
    },
    "author": "@tattle-made",
    "license": "ISC",
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
