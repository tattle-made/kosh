{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "command": "npm",
            "args": [ "run", "watch" ],
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "type":"shell",
            "isBackground": true,
            "group":"build",
            "problemMatcher": "$tsc-watch",
            "presentation":{
                "reveal": "always",
            }
        }
    ]
}